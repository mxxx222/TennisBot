{
  "version": 2,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/itf-scraper-cron",
      "schedule": "0 6,18 * * *"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 300
    },
    "api/**/*.js": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; connect-src 'self';"
        }
      ]
    }
  ],
  "env": {
    "EDUCATIONAL_MODE": "true",
    "RESEARCH_ONLY": "true",
    "NO_BETTING": "true"
  }
}